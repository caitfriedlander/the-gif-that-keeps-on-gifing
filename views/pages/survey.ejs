<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>

  <!-- functionality to swap between the langind page and the survey page -->
    <!-- SURVEY PAGE -->
  <div class="container">
    <div class="row valign-wrapper" id="main-div">
      <div class="col s12 m9">
        <div class="card-panel large">
          <div class="card-image center-align">
            <img src="images/sample-1.jpg">
            <!-- I think we should put a random gif here on each page of the survey -->
          </div>
          <div class="card-content">
            <h5 class="question-number"></h5>
            <p class="question-text"></p>
            <br>
              <div class="input-field col s12 responses">
              <select>
                <option value="" disabled selected>Your Answer</option>
                <option id="option1" value="1"></option>
                <option id="option2" value="2"></option>
                <option id="option3" value="3"></option>
                <option id="option4" value="4"></option>
                <option id="option5" value="5"></option>
              </select>
            </div>
              <span class="input-group-btn">
                  <button class="btn waves-effect waves-light" type="submit" name="action">GIF DAT
                    <i class="material-icons right">send</i>
                  </button>
              </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>

  <%- include('../partials/scripts') %>
</body>
</html>
